<div class="container m-auto min-h-full py-2" >
  <% if current_director.present? %>
    <%= link_to 'Upload New PDF', new_amazon_pdf_path, class: 'block border-slate-600 border border-solid text-white rounded p-4 my-4 text-xl hover:border-yellow-600 hover:text-white text-center' %>
  <% end %>
  <% if @amazon_pdfs.present? %>
    <div class="flex flex-wrap flex-col xl:flex-row xl:justify-center ">
      <% @amazon_pdfs.group_by{|g| g.type_of_pdf_group }.each do |group, pdfs| %>
        <div class="p-4 rounded my-4 mx-2 w-full xl:w-[30vw]">
          <div class="text-2xl text-white text-center  "><%= group.upcase %></div>
          <div class="flex flex-wrap flex-row items-center text-center justify-around">
            <% pdfs.each do |pdf| %>
              <div class=" items-center border text-white border-2 relative rounded-md hover:scale-{103} hover:pointer shadow-lg  shadow-yellow-500/40 hover:shadow-white/40 border-red-900 min-w-[30vw]  shadow-lg rounded-lg overflow-hidden py-4 m-4">
                <div class="px-4 py-2">
                  <div class="flex flex-col justify-between">
                    <h2 class="font-bold text-2xl mb-2 "><%= pdf.name %></h2>
                    <h2 class="font-semibold text-sm mb-2 "><%= pdf.created_at.strftime("%B %d, %Y") %></h2>
                  </div>
                  <p class="text-gray-600 text-sm"><%= pdf.program ? pdf.program : 'Everyone' %></p>
                </div>
                <div class="px-4 py-2">
                  <a href="<%= pdf&.url %>" target="_blank" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Preview
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="min-h-screen">
      <h1 class="text-4xl text-white text-center my-4 ">No PDFs found</h1>
    <% if current_director.present? %>
      <div class="flex justify-center mt-8">
        <%= link_to "Upload PDF", new_amazon_pdf_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg text-xl" %>
      </div>
    <% end %>
    </div>
  <% end %>
</div>