<div class="min-h-screen">
  <h3 class="text-3xl container m-auto mt-6">Upload PDF</h3>
  <%= simple_form_for @amazon_pdf, url: amazon_pdfs_path, method: :post, html: { class: "mt-6 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 container mx-auto", autocomplete: 'off' } do |form| %>
    <div class="mb-4 flex flex-wrap">
      <div class="mr-2">
        <%= form.label :name, 'PDF Name', class: "block text-gray-700 font-bold mb-2" %>
        <%= form.input :name, label: false, error: false, class: "shadow appearance-none border rounded w-full py-2 px-3 mx-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <%= form.error :name, class: 'text-red-800 duration-1000' %>
      </div>
      <div class="mb-4">
        <%= form.label :programs, 'Who is this PDF for?', class: "block text-gray-700 font-bold mb-2" %>
        <%= form.collection_select :program_id, @school.programs.all.order(:name), :id, :short_name, include_blank: '--All Programs--', label: false, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
    </div>
    <div class="mb-4 flex">
      <%= form.file_field :pdf, class: "shadow appearance-none border rounded w-1/3 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit "Upload", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
