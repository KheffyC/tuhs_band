<div class="mt-4">
  <%= link_to "Back to Music Collection" , practice_hub_program_section_path(@collection.section.id), class: "mx-4 shadow-lg shadow-yellow-500/40 hover:shadow-white/40 border-yellow-900 border-[.9px] text-white px-6 py-2 my-8 rounded-md" %>
  <h2 class="my-4 text-2xl text-white text-center"><%= @collection.title %></h2>
</div>
<div class="text-white w-[70vw] text-center m-auto p-4" style="display: flex; height: 100vh; flex-direction: column">
  <% @collection.music_sheets.each do |sheet| %>
      <%= link_to view_music_practice_hub_program_section_collection_path(sheet_id: sheet.id) do %>
        <div class="mx-4 shadow-lg shadow-yellow-500/40 hover:shadow-white/40 border-yellow-900 border-[.9px] text-white px-6 py-2 my-8 rounded-md flex items-center justify-center" >
          <h3 class="text-2xl text-white text-center"><%= sheet.title %></h3>
          <p class="text-xl text-gray-600 text-center"><span class="mx-2">-</span><%= sheet.description %></p>
        </div>
      <% end %>
  <% end %>
  <%= link_to '+ Add Music Sheet', new_music_practice_hub_program_section_collection_path(section_id: @collection.section.id, id: @collection.id), class: "items-center border text-white border-2 relative rounded-md hover:scale-{103} hover:pointer shadow-lg shadow-yellow-500/40 hover:shadow-white/40 border-red-900 min-w-[30vw] shadow-lg rounded-lg overflow-hidden py-4 m-4 text-xl" %>
</div>
